# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       @controllers.ApplicationController.index

GET     /hostels/search                         @controllers.SearchController.search

# JSON endpoints
GET     /hostels/hints                          @controllers.HintsController.hostelHints
GET     /hostels/search/:location               @controllers.SearchController.displayAll(location: String)
GET     /hostels/search/:city/:tags             @controllers.SearchController.classify(city: String, tags: String)
GET     /tags/suggestions                       @controllers.HintsController.tagSuggestions

GET     /stats                                  @controllers.StatsController.stats

# Javascript Reverse Routing
GET     /javascriptRoutes                       @controllers.ApplicationController.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                           @controllers.Assets.at(path="/public", file)
